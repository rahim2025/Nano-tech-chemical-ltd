<%- layout('layouts/layout') %>

<div class="content">
    <h1>Company Profile</h1>
    
    <section class="achievements">
        <h2>Our Achievements</h2>
        <div class="achievement-grid">
            <div class="achievement-item">
                <i class="fas fa-trophy"></i>
                <h3>Industry Leadership</h3>
                <p>Market leader in specialty chemicals with over 20 years of excellence</p>
            </div>
            <div class="achievement-item">
                <i class="fas fa-certificate"></i>
                <h3>Quality Certifications</h3>
                <p>ISO 9001:2015 certified manufacturing processes</p>
            </div>
            <div class="achievement-item">
                <i class="fas fa-globe"></i>
                <h3>Global Presence</h3>
                <p>Serving customers in over 50 countries worldwide</p>
            </div>
